	<script type="text/javascript">
	function listlink(data){
		location.href='capstone_app_read.jsp?no='+data;
	}
	
	function selectChange(){
		var year = document.querySelector('#year').value
		var semester = document.querySelector('#semester').value
	 	      $.ajax({
	          type:"get",
	          url:"yearSelectList?year="+year+"&semester="+semester,
	          contentType: "application/x-www-form-urlencoded; charset=utf-8",
	          datatype:"json",
	          success: function(data) {
	        	var result = data.list;
	        	var INNERHTML = '';
	        	for(var i=0;i<result.length;i++){
		        	var approval = result[i].approval
		        	if(approval==0){
		        		approval= '승인 대기';
		        	}else if(approval == 1){
		        		approval= '승인 완료';
		        	}else if(approval == -1){
		        		approval= '승인 취소';
		        	}
					INNERHTML+='<tr onclick="listlink('+result[i].no+');" style="cursor:pointer;">';
					INNERHTML+='<td>'+(i+1)+'</td>';
					INNERHTML+='<td>'+result[i].taskname+'</td>';
					INNERHTML+='<td>'+result[i].name+'</td>';
					INNERHTML+='<td>'+result[i].year+'</td>';
					INNERHTML+='<td>'+result[i].semester+'</td>';
					INNERHTML+='<td>'+approval+'</td>';
					INNERHTML+='</tr>';
	        	}
	        	$('tbody>tr').remove();
	        	$('tbody').html(INNERHTML);
	          },
	          error: function(e) {
	            alert("에러발생");
	          }			
	        });
	}
	</script>
