	<script>
		function Approval(data){
		      $.ajax({
		          type:"get",
		          url:"approval?no=<%= boardVo.getNo()%>&approval="+data,
		          contentType: "application/x-www-form-urlencoded; charset=utf-8",
		          datatype:"json",
		          success: function(data) {
		        	
		            alert("요청 성공");
		            window.location.reload();
		          },
		          error: function(e) {
		            alert("에러발생");
		          }			
		        });
		}
	</script>
